<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>お知らせ</h2>

    <% @notifications.each do |notification| %>
      <div class="row">
        <span><%= read_status(notification.read) %></span>
        <p>
          <strong><%= notification.comment.user.try(:name) %></strong>さんが
          [ブログ] <%= link_to "#{notification.comment.blog.title}", blog_path(notification.comment.blog, notification_id: notification.id) %> にコメントしました。
        </p>

        <p><%= posted_time(notification.created_at) %></p>
      </div>
    <% end %>

  </div>
</div>
